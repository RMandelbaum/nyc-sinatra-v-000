<h1>Edit <%=@figure.name%></h1>

<form action="/figures/<%=@figure.id%>" method="post">
  <input id= "hidden" type="hidden" name="_method" value="patch">
  <h3>Update Figure's Name<input type="text" name="figure[name]" id="figure_name"></h3>
  <h3>Update Figure's Title:</h3>
  <%@title.each do |title| %>
 <input type="checkbox" name="figure[title_ids]" id="title_name" value="<%=title.name%>" <%='checked' if @figure.titles.include?(title)%>><%=title.name%></p>
  <%end%>
  <h3>Update Figure's Landmark:</h3>
  <%@landmark.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_name" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%></p>
  <%end%>
  <h3>Add New Landmark:</h3>
  <input type="text" name="landmark[name]" id="new_landmark">

  <input type="submit" value="Edit Figure">
</form>
