<h1>Edit A Landmark</h1>

<form action="/landmarks/<%=@landmark.id%>" method="post">

  <input id="hidden" type="hidden" name="_method" value="patch">

  <label><%=@landmark.name%><br><%=@landmark.year_completed%></label>
  <p>Name<input type="text" name="landmark[name]" id="name"></p>
  <p>Year Completed<input type="text" name="landmark[year_completed]" id="year_completed"></p>
  <input type="submit" value="Edit Landmark">
</form>
